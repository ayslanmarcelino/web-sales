<section class="vh-100" style="background-color: #f0f9f8;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img
                src="https://e0.pxfuel.com/wallpapers/332/340/desktop-wallpaper-redbull-racing-red-logo-thumbnail.jpg"
                alt="login form"
                class="img-fluid"
                style="border-radius: 1rem 0 0 1rem;"
              />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-outline mb-4">
                    <%= f.email_field(:email, class: 'form-control form-control-l', autofocus: true, placeholder: 'E-mail', autocomplete: "email") %>
                  </div>
                  <div class="form-outline mb-4">
                    <%= f.password_field(:password, class: 'form-control form-control-l', placeholder: 'Senha', autocomplete: "current-password") %>
                  </div>
                  <div class="form-outline mb-4">
                    <%= f.check_box(:remember_me) %>
                    <%= f.label(:remember_me) %>
                  </div>
                  <div class="pt-1 mb-4">
                    <%= f.submit('Entrar', class: 'btn -bg-primary btn-lg btn-block') %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  <%= render partial: 'notification',
              formats: [:js],
              locals: {
                title: @notify_title,
                confirm_button_text: @notify_confirm_button_text,
                show_cancel_button: @show_cancel_button,
                cancel_button_text: @notify_cancel_button_text,
                confirm_path_ajax: @confirm_path_ajax
              } %>
</script>
