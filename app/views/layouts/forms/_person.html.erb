<h4 class="mt-3">
  Dados pessoais
</h4>
<div class="col-lg-4">
  <%= person_form.label(:document_number, class: 'required-label') %>
  <%= person_form.text_field(:document_number, class: 'form-control input-cpf required', id: 'person_document_number', required: true) %>
</div>
<div class="col-lg-4">
  <%= person_form.label(:name, class: 'required-label') %>
  <%= person_form.text_field(:name, class: 'form-control required', required: true) %>
</div>
<div class="col-lg-4">
  <%= person_form.label(:nickname) %>
  <%= person_form.text_field(:nickname, class: 'form-control') %>
</div>
<div class="col-lg-2">
  <%= person_form.label(:birth_date) %>
  <%= person_form.date_field(:birth_date, class: 'form-control') %>
</div>
<div class="col-lg-2">
  <%= person_form.label(:marital_status_cd) %>
  <%= person_form.select(:marital_status_cd, Person::MARITAL_STATUSES, { include_blank: 'Selecione um tipo' }, { class: 'form-control' }) %>
</div>
<h4 class="mt-3">
  Contatos
</h4>
<div>
  <%= link_to('#', data: { toggle: "modal", target: "#createContact" }, class: 'btn btn-sm -transparent-standard col-lg-12') do %>
    Adicionar
  <% end %>
  <div class="modal fade" id="createContact" tabindex="-1" role="dialog" aria-labelledby="createContactLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header g-0 row">
          <h5 class="modal-title">Contatos</h5>
        </div>
        <div class="modal-body">
          <%= person_form.fields_for :contacts do |contact| %>
            <%= render partial: 'contact_fields', locals: { f: contact } %>
          <% end %>
          <div class="d-inline-flex col-lg-12">
            <%= link_to_add_association('Adicionar', person_form, :contacts, class: 'btn btn-sm -transparent-standard col-lg-6') %>
            <button type="button" class="close btn btn-sm -transparent-success col-lg-6" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">Finalizar</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<h4 class="mt-3">
  Documentos
</h4>
<div class="col-lg-3">
  <%= person_form.label(:identity_document_type) %>
  <%= person_form.select(:identity_document_type, Person::IDENTITY_DOCUMENT_TYPES, { include_blank: 'Selecione um tipo' }, { class: 'form-control' }) %>
</div>
<div class="col-lg-3">
  <%= person_form.label(:identity_document_issuing_agency) %>
  <%= person_form.text_field(:identity_document_issuing_agency, class: 'form-control') %>
</div>
<div class="col-lg-6">
  <%= person_form.label(:identity_document_number) %>
  <%= person_form.text_field(:identity_document_number, class: 'form-control') %>
</div>
<div class="col-lg-2">
  <%= person_form.label(:cnh_number) %>
  <%= person_form.text_field(:cnh_number, class: 'form-control') %>
</div>
<div class="col-lg-3">
  <%= person_form.label(:cnh_record) %>
  <%= person_form.text_field(:cnh_record, class: 'form-control') %>
</div>
<div class="col-lg-2">
  <%= person_form.label(:cnh_type) %>
  <%= person_form.select(:cnh_type, Person::CNH_TYPES.map(&:upcase), { include_blank: 'Selecione a categoria' }, { class: 'form-control'}) %>
</div>
<div class="col-lg-2">
  <%= person_form.label(:cnh_issuing_state) %>
  <%= person_form.select(:cnh_issuing_state, Address::STATES, { include_blank: 'Selecione um estado' }, { class: 'form-control'}) %>
</div>
<div class="col-lg-3">
  <%= person_form.label(:cnh_expires_at) %>
  <%= person_form.date_field(:cnh_expires_at, class: 'form-control') %>
</div>
<%= render('layouts/forms/address', address_form: address_form) %>
