<div class="border-bottom w-100 bg-white navbar-fixed">
  <nav class="navbar m-2 mt-0 mb-0">
    <a class="btn text-secondary menu" id="menu-toggle">
      <div class="icon"><i class="bi bi-list"></i></div>
      <span class="label">Menu</span>
    </a>
    <div>
      <% if can_access_admin? %>
        <%= link_to(admin_root_path, class: 'btn text-secondary menu') do %>
          <div class="icon"><i class="bi bi-bar-chart"></i></div>
          <span class="label">Admin</span>
        <% end %>
      <% end %>
      <%= render partial: 'layouts/components/update_enterprise_modal' %>
      <%= render partial: 'layouts/components/dropdown_options' %>
    </div>
  </nav>
</div>
<div class="d-flex" id="wrapper">
  <div id="sidebar-wrapper">
    <div class="no-print list-group list-group-flush">
      <%= render partial: 'layouts/components/menu' %>
    </div>
  </div>
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <%= yield %>
    </div>
  </div>
</div>
<script>
  <%= render partial: 'notification',
             formats: [:js],
             locals: {
               title: @notify_title,
               confirm_button_text: @notify_confirm_button_text,
               show_cancel_button: @show_cancel_button,
               cancel_button_text: @notify_cancel_button_text,
               confirm_path_ajax: @confirm_path_ajax
             } %>

  $("#menu-toggle").click(function(e) {
    $("#wrapper").toggleClass("toggled");
  });
</script>
